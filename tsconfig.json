{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@core": ["./src/core"],
      "@entities/*": ["./src/entities/*"],
      "@entities": ["./src/entities"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "./node_modules/", "./lib/"]
}
